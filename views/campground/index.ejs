<%- include ('../partials/header') %>
<%- include ('../partials/navbar') %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center campgrounds-container">
        <% campgrounds.forEach( function(campground){ %>
            <div class="col-md-3 col-sm-6 campground-card">
                <figure class="figure img-thumbnail w-100">
                    <img src="<%= campground.image %>" alt="campground image" class="figure-img img-fluid rounded">
                    <figcaption class="figure-caption">
                        <h4 class="p-2"><%= campground.name %></h4>
                        <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary w-100 rounded-0">More Info</a>
                    </figcaption>
                </figure>
            </div>
        <% }); %>
    </div>
</div>
<%- include ('../partials/footer') %>