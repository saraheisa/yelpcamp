<%- include ('../partials/header') %>
<%- include ('../partials/navbar') %>
<%- include ('../partials/flash') %>

<div class="container"> 
    <h1 class="text-center">Create a new Comment for <%= campground.name%></h1>

    <div class="form-container">
        <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
            <div class="form-group voting-form">
                <input type="number" name="comment[vote]" value="1" min="1" max="5" hidden class="vote-element">
                <span class="heart" value="1">♥</span>
                <span class="heart" value="2">♥</span>
                <span class="heart" value="3">♥</span>
                <span class="heart" value="4">♥</span>
                <span class="heart" value="5">♥</span>
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="comment[text]" placeholder="comment..."></textarea>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="submit">
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id%>">GO BACK!</a>
    </div>
</div>

<script src="/scripts/vote.js"></script>

<%- include ('../partials/footer') %>